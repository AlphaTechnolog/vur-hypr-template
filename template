do_build() {
    make clear;
    make release;
}

do_install() {
    vbin ./build/Hypr hypr;
    vmkdir /usr/share/examples/hypr;
    vsconf example/hypr.conf;
    vmkdir /usr/share/xsessions;
    vcopy example/hypr.desktop /usr/share/xsessions/hypr.desktop;
}
